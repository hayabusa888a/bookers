<div class="index">
<h4 class="books">Books</h4>

<table>
  <thead>
   <tr>
     <th class="nill"> Title </th>
     <th class="nill"> Body </th>
     <th class="nill"> </th>
     <th class="nill"> </th>
     <th class="nill"> </th>

   </tr>
  </thead>
  <tbody>
   <% @books.each do |book| %>
    <tr>
     <td class="main"><%= book.title %></td>
     <td class="main"><%= book.body %></td>
     <td class="nill_main"> <%= link_to 'Show', book_path(book) %> </td>
     <td class="nill_main"> <%= link_to 'Edit', edit_book_path(book) %> </td>
     <td class="nill_main"> <%= link_to 'Destroy', book_path(book), method: :delete, 'data-confirm' => '本当に削除しますか？' %> </td>
     
    </tr>
   <% end %>  
  </tbody>
</table>

</div>
<%= render partial: 'books/new' %>